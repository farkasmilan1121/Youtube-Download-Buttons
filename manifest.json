{
  "name": "Youtube Download Buttons",
  "description": "Download MP3 and MP4 from Youtube with a single click.",
  "author": "Farkas",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/watch?v=*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css":[
        "css/main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}